<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Shopping4F2.Models"
             x:Name="this"
             x:Class="Shopping4F2.Controls.AddRecipeProductView">
    <Border>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Entry x:Name="NameEntry" Placeholder="Product Name" FontSize="20" HorizontalOptions="StartAndExpand" />
            <Entry x:Name="CountEntry" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="20" Keyboard="Numeric" Text="1"/>
            <Picker x:Name="CategoryPicker" Title="Select a Category" FontSize="10" ItemsSource="{x:Static models:Product.Categories}" WidthRequest="150"/>
            <Entry x:Name="UnitEntry" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="20" Text="pcs" WidthRequest="150"/>
        </StackLayout>
    </Border>
</ContentView>
